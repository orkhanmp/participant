@using Entities.TableModels
@model List<Participant>

<h2>Participant List</h2>

<form asp-controller="Participant" asp-action="Search" method="get" style="margin-bottom: 20px;">
    <div class="form-group" style="display: flex; gap: 10px; align-items: center;">
        <label>Search By Id:</label>
        <input type="number" name="id" class="form-control" style="width: 200px;" placeholder="Please enter the Id" />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-controller="Participant" asp-action="Index" class="btn btn-secondary">Show All</a>
    </div>
</form>

<hr />

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
        padding: 8px;
        text-align: left;
    }

    table {
        width: 100%;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Country</th>
            <th>Team</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Country</td>
                    <td>@(item.Team?.TeamName ?? "No Team")</td>
                    <td><a asp-controller="Participant" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a></td>
                    <td><a asp-controller="Participant" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this participant?');">Delete</a></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" style="text-align: center;">No participants found.</td>
            </tr>
        }
    </tbody>
</table>

<br />
<a asp-controller="Participant" asp-action="Add" class="btn btn-success">Add New Participant</a>
<a asp-controller="Team" asp-action="Index" class="btn btn-info">Manage Teams</a>